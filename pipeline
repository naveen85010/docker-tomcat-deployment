pipeline {
    agent any
    
    stages{
       
     stage('Git check out'){
        steps{
        git 'https://github.com/naveen85010/docker-tomcat-deployment.git'
     }
     }
    
       
      stage('Building docker image'){
        steps{
            sh 'docker image build -t $JOB_NAME:v1.$BUILD_NUMBER'
            sh 'docker image tag naveen850/$JOB_NAME:v1.$BUILD_NUMBER'
            sh 'docker image tag naveen850/$JOB_NAME:latest'


        }
      }

    }
}