pipeline {
    agent any
    
    stages{
       
     stage('Git check out'){
        steps{
        git 'https://github.com/naveen85010/docker-tomcat-deployment.git'
     }
     }
    
       
      stage('Building docker image'){
        steps{
            sh 'docker build -t $JOB_NAME:v1.$BUILD_NUMBER .'
            sh 'docker tag $JOB_NAME:v1.$BUILD_NUMBER naveen850/$JOB_NAME:v1.$BUILD_NUMBER'
            sh 'docker tag $JOB_NAME:latest'
            

        }
      }

    }
}